{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./wasm",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./wasm"]
  },
  "include": ["wasm/**/*"],
  "exclude": ["node_modules", "tests", "dist"]
}
